# Base path for file output
# If not provided, files will be saved to Desktop
BASE_OUTPUT_PATH=~/Desktop #default base path for output files
# BASE_OUTPUT_PATH=./output #optional base path for output files

# Groq API key for text-to-speech functionality and AI features
GROQ_API_KEY=your_groq_api_key_here

# AI Freelance Search App Configuration
# ======================================

# Application Settings
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_URL=postgresql://freelance_user:freelance_pass@localhost:5432/freelance_db
SQL_ECHO=false

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@freelancesearch.com

# Scraping Settings
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_REQUEST_DELAY=2
SCRAPER_MAX_RETRIES=3